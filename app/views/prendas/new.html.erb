<section class="section-form">
  <div class="container-form">
    <div>
      <h2>Creaci√≥n de Prenda</h2>
      <%= form_for @prenda, :url => { :action => "create" } do |f| %>
        <p class="form-group">
          <%= f.label :categoria %><br>
          <%= f.number_field :categoria ,required: true, :class => 'form-control'%>
        </p>
        <p class="form-group">
          <%= f.label :tipo %><br>
          <%= f.number_field :tipo ,required: true, :class => 'form-control'%>
        </p>
        <p class="form-group">
          <%= f.label :tela %><br>
          <%= f.text_field :tela ,required: true, :class => 'form-control'%>
        </p>
        <p class="form-group">
          <%= f.label :color_primario %><br>
          <%= f.color_field :color_primario ,required: true, :class => 'form-control' %>
        </p>
        <p class="form-group">
          <%= f.label :color_secundario %><br>
          <%= f.color_field :color_secundario ,required: true, :class => 'form-control'%>
        </p>
        <p class="container-btn-default">
          <%= f.submit :class => 'btn btn-default'%>
        </p>
      <% end %>
    </div>
  </div>
</section>
